<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/navigation %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-8">
            
                <div class="jumbotron">
                <% if(user.emailAddress){ %>
                    <h2> <%= user.emailAddress %> details</h2>
                    <ul>
                        <li>First Name - <%= user.firstName %></li>
                        <li>Last Name - <%= user.lastName %></li>
                        <li>from <%= user.city %>, <%= user.country %></li>
                        <li>working at <%= user.jobCompany %> as <%= user.jobTitle %></li>
                    </ul>
                    <% if(lastPostsPerUser.length > 0){ %>
                    <p>
                        <h4> <%= user.emailAddress %> last posts</h4>
                        <ul>
                            <% lastPostsPerUser.forEach(function(postKeyTitle) { %>
                            <li><a href="/posts/<%= postKeyTitle.key %>"><%= postKeyTitle.title %></a></li>
                        <% }); %>
                        </ul>
                    </p>
                    <% } %>
                    <p><h5><a href="/posts/<%= user.emailAddress %>">See all his posts</a></h5></p>
                    <p><h5><a href="/posts/create/<%= user.emailAddress %>">Create New Post</a></h5></p>
                <% } else{ %>
                    <h3>Select an user from the right to see his details!</h3>
                <% } %>
                </div>
                
            </div>
            <div class="col-sm-4">
                
                <div class="well">
                    <h5><a href="/users/create">Create New User</a></h5>
                </div>
                
                <div class="well">
                    <h3>Last registered users:</h3>
                    <% lastRegisteredUsers.forEach(function(userEmail) { %>
                        <li><a href="/users/<%= userEmail %>"><%= userEmail %></a></li>
                    <% }); %>
                </div>

            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>